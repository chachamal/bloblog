
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: 'registration-main') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Sign Up
    </h1>
  </div>



  <div class="form-group">
    <div class='form-text-wrap'>
     <label class="form-text">Nickname</label>
      <span class="indispensable">(Mandatory)</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", maxlength:"40",autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
    <label class="form-area">Introduction</label>
    </div>
    <%= f.text_area :introduction, autocomplete: "introduction",rows:"7" ,maxlength:"1000" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">MailAddress</label>
      <span class="indispensable">(Mandatory)</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
      <span class="indispensable">(Mandatory)</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
    <p class='info-text'>â€»Please set including both letters and numbers</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password  confirmation</label>
      <span class="indispensable">(Mandatory)</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
