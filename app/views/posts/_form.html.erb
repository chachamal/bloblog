<%= form_with model: post, local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>
  <%= f.file_field :images, name: "post[images][]"%>
  <%= f.text_field :title %>
  <%= f.text_area :text%>
  <% if post.id.blank? %>
    <%= f.submit "投稿する"%>
  <% else %>
    <%= f.submit "変更する"%>
  <% end %>
<% end %>

